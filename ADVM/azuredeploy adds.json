{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the administrator account of the new VM and domain"
            }
        },
        "CustomerName": {
            "type": "string",
            "maxLength": 8,
            "metadata": {
            "description": "Specifies a name for generating resource names."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the administrator account of the new VM and domain"
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "The FQDN of the Active Directory Domain to be created"
            }
        },
        "notificationSettings": {
         "value": {
            "notifyGlobalAdmins": "Enabled",
            "notifyDcAdmins": "Enabled",
            "additionalRecipients": []
            }
            },
        "dnsPrefix": {
            "type": "string",
            "metadata": {
                "description": "The DNS prefix for the public IP address used by the Load Balancer"
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3",
            "metadata": {
                "description": "Size of the VM for the controller"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            },
            "defaultValue": "[deployment().properties.templateLink.uri]"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
            },
            "defaultValue": ""
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "adVNET",
            "metadata": {
                "description": "Virtual network name."
            }
        },
        "virtualNetworkAddressRange": {
            "type": "string",
            "defaultValue": "10.0.0.0/8",
            "metadata": {
                "description": "Virtual network address range."
            }

        },
        "VMpublicIP": {
            "type": "string",
            "allowedValues": [
                "public",
                "private"
            ],
            "metadata": {
            "description": "Public IP for VM's or not"
            }
        },
        "VMnumber": {
            "type": "int",
            "metadata": {
            "description": "Number of VM's to deploy"
            }
        },
        "resourcegroupname": {
            "type": "string",
            "metadata": {
                "description": "name of the resourcegroup to use"
            }
        },
        "windowsOSVersion": {
            "type": "string",
            "defaultValue": "2016-Datacenter",
            "allowedValues": [
                "2008-R2-SP1",
                "2012-Datacenter",
                "2012-R2-Datacenter",
                "2016-Nano-Server",
                "2016-Datacenter-with-Containers",
                "2016-Datacenter"
            ],
            "metadata": {
                "description": "Specifies the Windows version for the VM. This will pick a fully patched image of this given Windows version. Allowed values: 2008-R2-SP1, 2012-Datacenter, 2012-R2-Datacenter, 2016-Nano-Server, 2016-Datacenter-with-Containers, 2016-Datacenter."
            }
        }
    },
    "resources": [

        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "VNet",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkAddressRange": {
                        "value": "[parameters('virtualNetworkAddressRange')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
        "apiVersion": "2017-06-01",
        "type": "Microsoft.AAD/DomainServices",
        "name": "[parameters('domainName')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "VNet"
        ],
        "properties": {
            "domainName": "[parameters('domainName')]",
            "subnetId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'), '/subnets/', 'adsubnet')]",
            "filteredSync": "disabled",
            "notificationSettings": "[parameters('notificationSettings')]"
             }
        },

                {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "VM",
            "dependsOn": [
                "adds"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vmwbackup.json', parameters('_artifactsLocationSasToken')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "VMpublicIP": {
                        "value": "[parameters('VMpublicIP')]"
                    },
                    "dnsLabelPrefix": {
                        "value": "[parameters('dnsPrefix')]"
                    },
                    "VMnumber": {
                        "value": "[parameters('VMnumber')]"
                    },
                    "WindowsOSVersion": {
                        "value": "[parameters('windowsOSVersion')]"
                    },
                    "Customername": {
                        "value": "[parameters('CustomerName')]"
                    },
                    "resourcegroupname": {
                        "value": "[parameters('resourcegroupname')]"
                    },
                    "domaintojoin": {
                        "value": "[parameters('domainName')]"
                    }
                }
            }
        }
    ]
}
